---
export const prerender = false;

import postData from '../../public/data/posts.json';

const posts = postData.posts;
const lastUpdated = new Date(postData.last_updated).toLocaleString();

const tagParam = new URL(Astro.request.url).searchParams.get('tag');
const activeTag = tagParam ? tagParam.toLowerCase() : null;

const allTags = Array.from(new Set(posts.flatMap(post => post.tags)));

const filteredPosts = activeTag
  ? posts.filter(post =>
      post.tags.some(t => t.toLowerCase() === activeTag)
    )
  : posts;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>ðŸ§  AI Blog Aggregator v0.1</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
      .filters {
        margin-bottom: 2rem;
      }
      .filters a {
        margin-right: 0.75rem;
        text-decoration: none;
        font-weight: bold;
        color: #555;
      }
      .filters a.active {
        color: black;
        text-decoration: underline;
      }
      .post {
        margin-bottom: 2rem;
      }
      .post h2 {
        margin: 0;
        font-size: 1.2rem;
      }
      .post p {
        margin: 0.25rem 0;
      }
      .tags {
        font-size: 0.9rem;
        color: #555;
      }
      .last-updated {
        color: #999;
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>ðŸ§  AI Blog Aggregator <span style="font-size: 0.8rem; color: #888;">v0.1</span></h1>
    <p class="last-updated">Last updated: {lastUpdated}</p>

    <div class="filters">
      <a href="/" class={!activeTag ? 'active' : ''}>All</a>
      {allTags.map(tag => (
        <a
          href={`/?tag=${encodeURIComponent(tag)}`}
          class={tag.toLowerCase() === activeTag ? 'active' : ''}
        >
          {tag}
        </a>
      ))}
    </div>

    {filteredPosts.map(post => (
      <div class="post">
        <h2><a href={post.url} target="_blank">{post.title}</a></h2>
        <p><strong>Source:</strong> {post.source} | <strong>Date:</strong> {post.published}</p>
        <p>{post.summary}</p>
        <p class="tags">Tags: {post.tags.join(', ')}</p>
      </div>
    ))}
  </body>
</html>
