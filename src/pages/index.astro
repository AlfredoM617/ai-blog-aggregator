---
export const prerender = false;

import posts from '../../public/data/posts.json';

// Use Astro.request.url instead of Astro.url for SSR compatibility
const url = new URL(Astro.request.url);
const tagParam = url.searchParams.get('tag');
const activeTag = tagParam ? tagParam.toLowerCase() : null;

const allTags = Array.from(new Set(posts.flatMap(post => post.tags)));

const filteredPosts = activeTag
  ? posts.filter(post =>
      post.tags.some(tag => tag.toLowerCase() === activeTag)
    )
  : posts;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>AI Blog Aggregator</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
      .filters {
        margin-bottom: 2rem;
      }
      .filters a {
        margin-right: 0.75rem;
        text-decoration: none;
        font-weight: bold;
        color: #555;
      }
      .filters a.active {
        color: black;
        text-decoration: underline;
      }
      .post {
        margin-bottom: 2rem;
      }
      .post h2 {
        margin: 0;
        font-size: 1.2rem;
      }
      .post p {
        margin: 0.25rem 0;
      }
      .tags {
        font-size: 0.9rem;
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>ðŸ§  AI Blog Aggregator</h1>

    <div class="filters">
      <a href="/" class={!activeTag ? 'active' : ''}>All</a>
      {allTags.map(tag => (
        <a
          href={`/?tag=${encodeURIComponent(tag)}`}
          class={tag.toLowerCase() === activeTag ? 'active' : ''}
        >
          {tag}
        </a>
      ))}
    </div>

    {filteredPosts.map(post => (
      <div class="post">
        <h2><a href={post.url} target="_blank">{post.title}</a></h2>
        <p><strong>Source:</strong> {post.source} | <strong>Date:</strong> {post.published}</p>
        <p>{post.summary}</p>
        <p class="tags">Tags: {post.tags.join(', ')}</p>
      </div>
    ))}
        <footer style="margin-top: 4rem; font-size: 0.9rem; color: #999;">
          Version: v0.1 â€” Deployed on {new Date().toLocaleDateString()}
        </footer>    
  </body>
</html>
